<?xml version="1.0" encoding="utf-8"?>
<!-- bottom_sheet_calendar.xml -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_calendar_dialog"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingBottom="32dp">

        <!-- Drag Handle -->
        <View
            android:id="@+id/drag_handle"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_drag_handle"
            android:clickable="true"
            android:focusable="true" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="When's your trip?"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Tab Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_tab_container"
            android:padding="4dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/tab_dates"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Dates"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="normal"
                android:gravity="center"
                android:background="@drawable/bg_tab_selected"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tab_months"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Months"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/bg_tab_unselected"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tab_flexible"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="Flexible"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/bg_tab_unselected"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Calendar Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_prev_month"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_chevron_left"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                app:tint="@color/text_primary" />

            <TextView
                android:id="@+id/tv_month_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="June 2025"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center" />

            <ImageView
                android:id="@+id/iv_next_month"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_chevron_right"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                app:tint="@color/text_primary" />

        </LinearLayout>

        <!-- Days of Week Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="S"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="M"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="T"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="W"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="T"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="F"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="S"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Calendar Grid -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:paddingHorizontal="8dp"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_calendar_day" />

        <!-- Duration Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp"
            android:gravity="start">

            <TextView
                android:id="@+id/btn_exact_dates"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Exact dates"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingHorizontal="24dp"
                android:background="@drawable/bg_duration_selected"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_plus_1_day"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="± 1 day"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingHorizontal="24dp"
                android:background="@drawable/bg_duration_unselected"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/btn_plus_2_days"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="± 2 days"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingHorizontal="24dp"
                android:background="@drawable/bg_duration_unselected"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Bottom Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/btn_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="normal"
                android:background="?attr/selectableItemBackground"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next"
                android:layout_width="120dp"
                android:layout_height="56dp"
                android:text="NEXT"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/black"
                app:cornerRadius="28dp"
                app:elevation="0dp" />

        </LinearLayout>

        <!-- Bottom padding for safe area -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>